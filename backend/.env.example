# ==========================================
# BOWEN HOOKS - ENVIRONMENT CONFIGURATION
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=Bowen Hooks
APP_URL=http://localhost:4200

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bowen_hooks_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here
DB_DIALECT=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration (for caching, sessions, real-time features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_immediately_in_production_make_it_very_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_also_make_this_very_secure
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Cookie Configuration
COOKIE_SECRET=your_cookie_secret_key_here
COOKIE_MAX_AGE=604800000

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_PROFILE_PHOTOS=6
MAX_VOICE_NOTE_DURATION=120
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/ogg,audio/webm

# Email Configuration (University Email Verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@bowenhooks.com
EMAIL_FROM_NAME=Bowen Hooks

# SMS Configuration (Twilio for optional phone verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_MESSAGE_MAX=50

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:4200
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# University Configuration
UNIVERSITY_NAME=Bowen University
UNIVERSITY_EMAIL_DOMAIN=@bowenuniversity.edu.ng
UNIVERSITY_EMAIL_DOMAINS=@bowenuniversity.edu.ng,@bowen.edu.ng
REQUIRE_EDU_EMAIL=true

# Admin Configuration
ADMIN_EMAIL=admin@bowenhooks.com
ADMIN_PASSWORD=change_this_immediately
SUPER_ADMIN_KEY=your_super_admin_secret_key

# After Dark Mode
AFTER_DARK_START=22:00
AFTER_DARK_END=06:00

# Location & Proximity Features
ENABLE_LOCATION_TRACKING=true
LOCATION_UPDATE_INTERVAL=30000
PROXIMITY_RADIUS_OPTIONS=10,50,100,500,1000
MAX_PROXIMITY_RADIUS=1000
LOCATION_ACCURACY_THRESHOLD=50
HOT_ZONE_RADIUS=50
HOT_ZONE_MIN_USERS=5

# Anonymity Features
ANONYMOUS_SESSION_DURATION=86400000
REVEAL_DELAY=86400000
ENABLE_ANONYMOUS_MODE=true
MASKED_PROFILE_BLUR_LEVEL=20
GRADUAL_REVEAL_MESSAGE_THRESHOLD=20
MYSTERY_MATCH_DURATION=86400000

# Bomb Messages
BOMB_MESSAGE_TYPES=quick_fuse,time_bomb,slow_burn
QUICK_FUSE_DURATION=30000
TIME_BOMB_DURATION=86400000
SLOW_BURN_DURATION=259200000

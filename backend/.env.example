# Spark Roulette
SPARK_DURATION=60000
MAX_SPARKS_PER_DAY=10
MAX_SPARKS_PREMIUM=50
SPARK_COOLDOWN=300000
VIDEO_QUALITY=medium

# Rizz Score & Gamification
ENABLE_RIZZ_SCORE=true
RIZZ_CALCULATION_INTERVAL=86400000

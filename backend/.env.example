# Voice Notes
VOICE_FILTERS=normal,deep,chipmunk,robot,echo,reverb
MAX_VOICE_NOTE_SIZE=5242880

# Safety & Security
ENABLE_PHOTO_VERIFICATION=true
PHOTO_VERIFICATION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800000
PASSWORD_MIN_LENGTH=8
REQUIRE_PASSWORD_SPECIAL_CHAR=true
AUTO_DELETE_INACTIVE_DAYS=90
GRADUATION_AUTO_DELETE=true

# Safe Meet Features
